/* pages/market/market.wxss */
/* form表单 */
.input-content{
    padding: 10rpx 10rpx;
    background-color: #fff;

}
.form_input{
    padding: 20rpx 20rpx;
    font-size: 30rpx;
    background-color: #fff;
    border: 0 solid #e9eaec;
    border-bottom-width: 1px;
}
.form_submit{
    margin: 20rpx 0;
}

/* 时间选择器 */
.picker-content{
    padding: 10rpx 35rpx;
    background-color: #fff;
    /* font-weight: 400; */
}
.picker-name{
    font-size: 30rpx;
    padding: 20rpx 0;
}
.tui-picker-detail{
    font-size: 27rpx;
    padding: 0rpx 0 20rpx 0;
    border: 0 solid #e9eaec;
    border-bottom-width: 1px;
}


/* 添加标记点 */
.add_marker_view{
    position: fixed;
    top: 50rpx;
    left: 10rpx;
    z-index: 999;
    text-align: center;
}
.add_marker_img{
    width: 60rpx;
    height: 60rpx;
}
.add_marker_view_view{
    font-size: 20rpx;
    background-color: #fff;
}

/*底部弹窗开始 -使屏幕变暗  */
.coverview_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.coverview_box {
    width: 100%;
    height: 760rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    padding-top: 0rpx;
}
